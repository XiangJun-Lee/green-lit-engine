<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.keji.green.lit.engine.mapper.UserMapper">
    
    <resultMap id="BaseResultMap" type="User">
        <id column="uid" property="uid"/>
        <result column="phone" property="phone"/>
        <result column="password" property="password"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modify" property="gmtModify"/>
        <result column="last_login_at" property="lastLoginAt"/>
        <result column="credit_balance" property="creditBalance"/>
        <result column="is_active" property="isActive"/>
        <result column="resume_text" property="resumeText"/>
        <result column="user_role" property="role"/>
        <result column="client_connection" property="clientConnection"/>
        <result column="email" property="email"/>
    </resultMap>

    <sql id="Base_Column_List">
        uid, phone, password, gmt_create, gmt_modify, last_login_at, credit_balance,
        is_active, resume_text, user_role, client_connection, email
    </sql>

    <select id="findByPhone" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_info
        WHERE phone = #{phone}
    </select>

    <select id="existsByPhone" resultType="boolean">
        SELECT COUNT(1)
        FROM user_info
        WHERE phone = #{phone}
    </select>

    <insert id="insert" parameterType="User" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO user_info (
            phone, password, gmt_create, credit_balance, is_active, user_role, email
        ) VALUES (
            #{phone}, #{password}, #{gmtCreate}, #{creditBalance}, #{isActive}, #{role}, #{email}
        )
    </insert>

    <insert id="insertSelective" parameterType="User" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO user_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="phone != null">
                phone,
            </if>
            <if test="password != null">
                password,
            </if>
            <if test="gmtCreate != null">
                gmt_create,
            </if>
            <if test="gmtModify != null">
                gmt_modify,
            </if>
            <if test="lastLoginAt != null">
                last_login_at,
            </if>
            <if test="creditBalance != null">
                credit_balance,
            </if>
            <if test="isActive != null">
                is_active,
            </if>
            <if test="resumeText != null">
                resume_text,
            </if>
            <if test="role != null">
                user_role,
            </if>
            <if test="clientConnection != null">
                client_connection,
            </if>
            <if test="email != null">
                email,
            </if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="phone != null">
                #{phone},
            </if>
            <if test="password != null">
                #{password},
            </if>
            <if test="gmtCreate != null">
                #{gmtCreate},
            </if>
            <if test="gmtModify != null">
                #{gmtModify},
            </if>
            <if test="lastLoginAt != null">
                #{lastLoginAt},
            </if>
            <if test="creditBalance != null">
                #{creditBalance},
            </if>
            <if test="isActive != null">
                #{isActive},
            </if>
            <if test="resumeText != null">
                #{resumeText},
            </if>
            <if test="role != null">
                #{role},
            </if>
            <if test="clientConnection != null">
                #{clientConnection},
            </if>
            <if test="email != null">
                #{email},
            </if>
        </trim>
    </insert>

    <update id="updateLastLoginTime">
        UPDATE user_info
        SET last_login_at = #{lastLoginAt}
        WHERE uid = #{uid}
    </update>

    <update id="updatePassword">
        UPDATE user_info
        SET password = #{password},
            gmt_modify = #{gmtModify}
        WHERE uid = #{uid}
    </update>

    <update id="updateUserStatus">
        UPDATE user_info
        SET is_active = #{isActive},
            gmt_modify = #{gmtModify}
        WHERE uid = #{uid}
    </update>

    <update id="updateClientConnection">
        UPDATE user_info
        SET client_connection = #{clientConnection},
            gmt_modify = #{gmtModify}
        WHERE uid = #{uid}
    </update>

    <select id="findById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_info
        WHERE uid = #{uid}
    </select>
</mapper> 